@using TotalPortal.Configuration
@using TotalModel.Models;

@(Html.Kendo().Grid<PendingDeliveryAdvice>()
    .Name("getDeliveryAdvicesGrid")
    .Columns(columns =>
    {
        columns.Bound(c => c.DeliveryAdviceReference).Title("Số phiếu").Width(40);
        columns.Bound(c => c.DeliveryAdviceEntryDate).Title("Ngày").Width(90).Format("{0:" + SettingsManager.DateTimeFormat + "}");
        columns.Bound(c => c.CustomerName).Title("Khách hàng").Width(180);
        columns.Bound(c => c.ReceiverName).Title("Đơn vị nhận").Width(180);
        columns.Bound(c => c.Description).Title("Ghi chú").Width(80);
    })
    .ToolBar(toolbar =>
    {
        toolbar.Template(@<text>
            <div class="toolbar" style="float: right;">
                <label>Nhập số phiếu đặt hàng:</label>
                <input id="deliveryAdviceReferenceSearchBox" class="k-textbox" style="text-align: center; margin-right: 13px;" onkeyup="deliveryAdviceReferenceSearchBox_KeyUp()" />
            </div>
        </text>);
    })
        .Scrollable(s => s.Height(SettingsManager.PopupContentHeight))
        .DataSource(ds => ds.Ajax()
            .Read(read => read.Action("GetDeliveryAdvices", "GoodsIssueAPIs", new { area = "Inventories" }).Data("onAdditionalGetDeliveryAdvices"))
            .ServerOperation(true)
        )
        .Selectable()
)

<script type="text/javascript">
    function onAdditionalGetDeliveryAdvices(e) {
        return {
            locationID: window.parent.requireConfig.pageOptions.LocationID,
            goodsIssueID: $("#GoodsIssueID").val(),
            deliveryAdviceReference: $("#deliveryAdviceReferenceSearchBox").val()
        };
    }

    function deliveryAdviceReferenceSearchBox_KeyUp() {
        if ($("#deliveryAdviceReferenceSearchBox").val().length === 0 || $("#deliveryAdviceReferenceSearchBox").val().length >= "@SettingsManager.AutoCompleteMinLenght") {
            $("#getDeliveryAdvicesGrid").data("kendoGrid").dataSource.read();
        }
    }

    $("#getDeliveryAdvicesGrid").dblclick(function (e) {
        okButton_Click();
    })
</script>

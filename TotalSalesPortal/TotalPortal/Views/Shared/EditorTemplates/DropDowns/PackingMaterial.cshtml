@model TotalPortal.Areas.Commons.ViewModels.Helpers.IPackingMaterialDropDownViewModel

<div class="form-group">
    @Html.LabelFor(model => model.PackingMaterialID, new { @class = "right-panel-label" })
    <div class="div-input">
        @Html.Kendo().DropDownListFor(m => m.PackingMaterialID).BindTo(Model.PackingMaterialSelectList).HtmlAttributes(new { @class = "right-panel-input" })
    </div>
    <div class="div-validation-message">
        @Html.ValidationMessageFor(model => model.PackingMaterialID, "", new { @class = "text-danger" })
    </div>
</div>
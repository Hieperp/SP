@model string

@(Html.Kendo().AutoCompleteFor(m => m)
        .Name("GoodsIssueTypeName")
        .DataTextField("Name")
        .Filter("contains")
        .Placeholder("Lý do không xuất kho ...")
        .DataSource(source =>
        {
            source.Read(read =>
            {
                read.Action("SearchGoodsIssueTypes", "GoodsIssueTypeAPIs", new { area = "Commons" }).Data(@<text> function(e) {return {searchText: $("#GoodsIssueTypeName").data("kendoAutoComplete").value()};}</text>);//Send parameter to controller search action
            })
            .ServerFiltering(true);
        })
        .Events(e =>
        {
            e.Select("gridEditorGoodsIssueTypeSelect");
            e.Change("gridEditorGoodsIssueTypeChange");
        })
        .Value(Model)
        .HtmlAttributes(new { @class = "custom-control" })
)

<script type="text/javascript">
    $("#GoodsIssueTypeName").focus(function (e) {
        window.GoodsIssueTypeNameBeforeChange = $("#GoodsIssueTypeName").val();
    });
</script>
